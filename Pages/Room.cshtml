@page "/Room/{roomId}"
@using VideoCallApp.Pages
@model VideoCallApp.Pages.RoomModel
@{
    ViewData["Title"] = "Room " + Model.RoomId;
}

<style>
    video {
        width: 40vw;
        height: 30vw;
        margin: 2rem;
        background: #2c3e50;
    }

    .videos {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<script type="module" src="~/js/firebaseConfig.js"></script>
<script type="module" src="~/js/room.js"></script>

<div class="displayU">
    <div class="videos">
        <video id="localVideo" autoplay playsinline></video>
        <video id="remoteVideo" autoplay playsinline></video>
    </div>

    <div class="controlBtn">
        <button id="cameraBtn">
            <img id="iconCamera" src="~/image/cameraO.png" width="30px" height="30px ">
        </button>
        <button id="microBtn">
            <img id="iconMic" src="~/image/microphone-black-shape.png" width="30px" height="30px">
        </button>
        <button id="hangupBtn">
            <img src="~/image/phone.png" width="30px" height="30px">
        </button>
    </div>
</div>
